<!DOCTYPE html>
<html>
  <head>
    <title>FlatironClub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= button_to "Logout", {action: "destroy", controller: 'sessions'}, method: :delete %>
    <% else %>
      <%= link_to "Login", login_path %>
    <% end%>
  
    <%= yield %>
  </body>
</html>

<h1>🤦🏻‍♂️ Create a Victim 👩🏾‍🦱</h1>

<% if flash[:errors] %>
  <ul>
  <% flash[:errors].each do |message| %>
    <li><%= message %></li>
  <% end%>
  </ul>
<% end %>


<%= form_with model: @victim, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :living %>
  <%= f.check_box :living %>
  <br>
  <%= f.label :speed %>
  <%= f.number_field :speed %>
  <br>
  <%= f.collection_select :monster_id, @monsters, :id, :name, prompt: true %>
  <br>
  <%= f.submit %>
<% end %>
